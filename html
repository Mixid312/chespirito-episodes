<script>
  // Lista de episodios con título y videoId de YouTube
  const episodes = [
    { title: "Capítulo 1 - El Chavo del 8", videoId: "UpJzGQWnFaM" },
    { title: "Capítulo 2 - El Chapulín Colorado", videoId: "kzZ6h6nkz8w" },
    { title: "Capítulo 3 - Los Caquitos", videoId: "NnXx6Pv5Jrc" },
    { title: "Capítulo 4 - Chaparrón Bonaparte", videoId: "Jj8CMXprzvY" },
    { title: "Capítulo 5 - Dr. Chapatín", videoId: "5pyP6FNV4cQ" },
    { title: "Capítulo 6 - Chapulín y El Chavo", videoId: "hNjYFEkqxUU" },
    { title: "Capítulo 7 - El Chavo y Quico", videoId: "kItlqgfPhDw" },
    { title: "Capítulo 8 - La Vecindad", videoId: "S8yk9pFESk0" }
    // Añade aquí más episodios si quieres
  ];

  const episodesContainer = document.getElementById("episodes");
  const videoFrame = document.getElementById("video-frame");

  function loadEpisode(index) {
    const episode = episodes[index];
    const url = `https://www.youtube.com/embed/${episode.videoId}?autoplay=1&rel=0`;
    videoFrame.src = url;

    document.querySelectorAll("#episode-list button").forEach(btn => btn.classList.remove("active"));
    const btn = document.querySelector(`#episode-list button[data-index="${index}"]`);
    if (btn) btn.classList.add("active");
  }

  episodes.forEach((episode, index) => {
    const li = document.createElement("li");
    const btn = document.createElement("button");
    btn.textContent = episode.title;
    btn.setAttribute("data-index", index);
    btn.addEventListener("click", () => loadEpisode(index));
    li.appendChild(btn);
    episodesContainer.appendChild(li);
  });

  loadEpisode(0);
</script>

